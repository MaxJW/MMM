			},
			{
				"key": "password",
				"type": "password",
				"label": "Password",
				"description": "Your Polestar account password",
				"placeholder": "Password"
			},
			{
				"key": "vin",
				"type": "text",
				"label": "VIN",
				"description": "Vehicle Identification Number",
				"placeholder": "VIN"
			}
		]
	}
}
